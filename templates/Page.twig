{% extends '_base.twig' %}

{% block title %}{{ this.title }}{% endblock %}

{% block body %}
    {% if this.image %}
        <img src="{{ this.image }}" id="header-image">
    {% endif %}

    <div id="content">
        <h1>{{ this.title }}</h1>
        <div>
            {{ this.body }}
        </div>


        <h3>Gallery</h3>
        <ul>
            {% for block in this.gallery %}
                <li>
                    <img src="{{ block.image }}">
                    <p>{{ block.description }}</p>
                    <img src="{{ block.image.crop(200, 50) }}" alt="">
                    <img src="{{ block.image.crop(50, 200) }}" alt="">

                    <img src="{{ block.image.crop(200, 0) }}" alt="">
                    <img src="{{ block.image.crop(0, 200) }}" alt="">
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}